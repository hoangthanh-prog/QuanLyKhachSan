@model QL_KhachSan.Models.ViewModels.PhongDetailVM
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Chi tiết phòng";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">

        <div class="card-header bg-info text-white">
            <h4 class="mb-0">📘 Chi tiết phòng</h4>
        </div>

        <div class="card-body p-4">

            <div class="row">

                <!-- Bên trái: Thông tin -->
                <div class="col-md-7">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th class="bg-light">Mã phòng</th>
                                <td>@Model.Phong.MaPhong</td>
                            </tr>

                            <tr>
                                <th class="bg-light">Tên phòng</th>
                                <td>@Model.Phong.TenPhong</td>
                            </tr>

                            <tr>
                                <th class="bg-light">Tình trạng</th>
                                <td>
                                    @if (Model.Phong.TinhTrang == "Trống")
                                    {
                                        <span class="badge bg-success">Trống</span>
                                    }
                                    else if (Model.Phong.TinhTrang == "Đang sử dụng")
                                    {
                                        <span class="badge bg-warning text-dark">Đang sử dụng</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Model.Phong.TinhTrang</span>
                                    }
                                </td>
                            </tr>

                            <tr>
                                <th class="bg-light">Biến thể</th>
                                <td>@Model.Phong.MaBienThe</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="mt-4">
                        @Html.ActionLink("✏ Sửa", "Edit", new { id = Model.Phong.MaPhong }, new { @class = "btn btn-warning px-4" })
                        @Html.ActionLink("⬅ Trở về", "Index", null, new { @class = "btn btn-secondary px-4 ms-2" })
                    </div>
                </div>

                <!-- Bên phải: Hình ảnh -->
                <div class="col-md-5 d-flex justify-content-center align-items-start">
                    <div class="card shadow-sm">

                        @if (Model.Hinh != null && !string.IsNullOrEmpty(Model.Hinh.HinhAnh1))
                        {
                            <img src="~/content/Images/@Model.Hinh.HinhAnh1"
                                 class="img-fluid rounded"
                                 style="max-height: 300px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="text-center p-4 text-muted">
                                <i>Không có ảnh phòng</i>
                            </div>
                        }

                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
