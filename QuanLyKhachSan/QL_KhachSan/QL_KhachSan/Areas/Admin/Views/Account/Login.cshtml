@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <title>Đăng nhập Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(to right, #4e73df, #224abe);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: "Segoe UI", sans-serif;
        }

        .login-card {
            width: 380px;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
        }

        .title-text {
            font-weight: 600;
        }
    </style>
</head>
<body>

    <div class="card login-card p-4">
        <h3 class="text-center title-text mb-3">🔐 Đăng nhập Admin</h3>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { area = "Admin" }))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label fw-bold">Tài khoản</label>
                <input type="text" name="taiKhoan" class="form-control" placeholder="Nhập tài khoản..." required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Mật khẩu</label>
                <input type="password" name="matKhau" class="form-control" placeholder="Nhập mật khẩu..." required />
            </div>

            <div class="d-grid mt-3">
                <button type="submit" class="btn btn-primary py-2 fw-bold">Đăng nhập</button>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
