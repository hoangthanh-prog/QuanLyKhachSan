                <label class="form-label">Tên hạng phòng</label>
                <input type="text"
                       name="keyword"
                       value="@keyword"
                       class="form-control"
                       placeholder="VD: Deluxe, Suite, View biển..." />
            </div>

            <div class="col-md-2">
                <label class="form-label">Giá từ (VNĐ)</label>
                <input type="number"
                       name="minPrice"
                       min="0"
                       value="@(minPrice.HasValue ? minPrice.Value.ToString() : "")"
                       class="form-control" />
            </div>

            <div class="col-md-2">
                <label class="form-label">Đến (VNĐ)</label>
                <input type="number"
                       name="maxPrice"
                       min="0"
                       value="@(maxPrice.HasValue ? maxPrice.Value.ToString() : "")"
                       class="form-control" />
            </div>

