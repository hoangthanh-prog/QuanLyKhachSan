<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f5f6fa;
        }
        /* Sidebar */
        .sidebar {
            height: 100vh;
            background: #2c3e50;
            color: #fff;
            padding-top: 20px;
            position: fixed;
            left: 0;
            width: 240px;
        }

            .sidebar h4 {
                text-align: center;
                margin-bottom: 30px;
                font-weight: 600;
            }

            .sidebar .nav-link {
                color: #ecf0f1;
                padding: 12px 20px;
                font-size: 16px;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background: #34495e;
                    color: #fff;
                }

        /* Content */
        .content {
            margin-left: 260px;
            padding: 25px;
        }

        .topbar {
            background: white;
            padding: 15px 25px;
            border-radius: 10px;
            margin-bottom: 25px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4>Admin Panel</h4>
        <nav class="nav flex-column">
            <a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString()=="Dashboard"?"active":""))" href="@Url.Action("Index","Dashboard")">📊 Dashboard</a>
            <a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString()=="Phong"?"active":""))" href="@Url.Action("Index","Phong")">🏠 Quản lý phòng</a>
            <a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString()=="KhachHangs"?"active":""))" href="@Url.Action("Index","KhachHangs")">🙍 Quản lý khách hàng</a>
            <a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString()=="DatPhongGiupKhach"?"active":""))" href="@Url.Action("ChonPhong","DatPhongGiupKhach")">📝 Đặt phòng giúp khách</a>


            <a class="nav-link" href="@Url.Action("Logout","Login")">🚪 Đăng xuất</a>
        </nav>
    </div>

    <!-- Content -->
    <div class="content">
        <div class="topbar">
            <h3 style="margin:0;">@ViewBag.Title</h3>
        </div>

        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
