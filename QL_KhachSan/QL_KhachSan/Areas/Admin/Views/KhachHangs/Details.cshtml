@model QL_KhachSan.Models.KhachHang

@{
    ViewBag.Title = "Trang xem chi tiết khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">

        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Chi tiết khách hàng</h4>
        </div>
        <table class="table table-hover">
            <tbody>
                <tr>
                    <th class="bg-light">Mã khách hàng</th>
                    <td>@Model.MaKH</td>
                </tr>

                <tr>
                    <th class="bg-light">Tên khách hàng</th>
                    <td>@Model.TenKH</td>
                </tr>

                <tr>
                    <th class="bg-light">Gmail</th>
                    <td>@Model.Gmail</td>
                </tr>

                <tr>
                    <th class="bg-light">Mật khẩu</th>
                    <td>@Model.MatKhau</td>
                </tr>


                <tr>
                    <th class="bg-light">Giới tính</th>
                    <td>@Model.GioiTinh</td>
                </tr>

                <tr>
                    <th class="bg-light">Ngày sinh</th>
                    <td>@Model.NgaySinh </td>
                </tr>

                <tr>
                    <th class="bg-light">Tỉnh thành</th>
                    <td>@Model.TinhThanh</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-4">
            @Html.ActionLink("✏ Sửa", "Edit", new { id = Model.MaKH }, new { @class = "btn btn-warning px-4" })
            @Html.ActionLink("⬅ Trở về", "Index", null, new { @class = "btn btn-secondary px-4 ms-2" })
        </div>
    </div>
</div>

