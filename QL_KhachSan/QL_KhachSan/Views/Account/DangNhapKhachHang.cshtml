@{
    ViewBag.Title = "Đăng nhập khách hàng";
}

<div class="w-25 border p-3 rounded shadow mx-auto mt-5 mb-5">
    <h2 class="text-center">Đăng nhập</h2>

    @if (ViewBag.Error != null)
    {
        <div class="text-danger">@ViewBag.Error</div>
    }

    @using (Html.BeginForm("DangNhapKhachHang", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label>Gmail</label>
            <input type="email" name="Gmail" class="form-control" placeholder="Nhập email..." required />
        </div>

        <div class="mb-3">
            <label>Mật khẩu</label>
            <input type="password" name="MatKhau" class="form-control" placeholder="Nhập mật khẩu..." />
        </div>

        <button type="submit" class="btn btn-success w-100 mb-2">Đăng nhập</button>
    }

    <a href="@Url.Action("DangKyKhachHang", "Account")">
        Chưa có tài khoản? Đăng ký
    </a>
</div>